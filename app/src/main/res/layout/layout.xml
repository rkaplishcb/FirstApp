<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFirstApp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/etFirstAppTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etFirstAppTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter FirstApp Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddFirstApp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAddFirstApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDeleteFirstApp" />

    <Button
        android:id="@+id/btnDeleteFirstApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>